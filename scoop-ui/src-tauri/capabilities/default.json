{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "scoop",
          "cmd": "scoop",
          "args": true
        },
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": true
        }
      ]
    }
  ]
}